# =============================================================================
# K8s Office - Terraform Variables
# =============================================================================
# Kopiér denne fil til terraform.tfvars og tilpas værdierne.
# terraform.tfvars er ignoreret af git (indeholder potentielt secrets).
# =============================================================================

kubeconfig_path = "~/.kube/config"

# =============================================================================
# Nodes
# =============================================================================

nodes = {
  "k8s-master" = "10.200.0.11"
  "k8s-slave1" = "10.200.0.9"
  "k8s-slave2" = "10.200.0.10"
}

